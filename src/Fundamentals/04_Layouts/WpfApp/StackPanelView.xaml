<Window x:Class="WpfApp.StackPanelView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="StackPanelView" Height="450" Width="800">
    
    <StackPanel Orientation="Horizontal">

        <Button Width="200" Height="200" Margin="5" Background="Blue" Content="Hello World!" />
        <Button Width="200" Height="200" Margin="5" Background="Green" Content="Hello World!" />
        <Button Background="Red" Margin="5" Content="Hello World!" />
        <Ellipse 
     Fill="Green"
     Width="40" Height="40" />
    </StackPanel>
    
</Window>
